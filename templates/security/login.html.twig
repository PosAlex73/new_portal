{% extends 'layout/base.html.twig' %}
{% block header %}{% endblock %}
{% block breadcrumbs %}{% endblock %}
{% block page_title %}{% endblock %}

{% block content %}
        <form action="" id="login_form" method="post">
            <div class="row d-flex justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-4">
                <div class="text-center">
                    <p class="text-muted mt-2 mb-4">Вход в личный кабинет</p>
                </div>
                <div class="card">
                    <div class="card-body p-4">

                        <div class="text-center mb-4">
                            <h4 class="text-uppercase mt-0">Вход</h4>
                        </div>
                        {% if error %}
                            <div>
                                <p class="text-danger">{{ error }}</p>
                            </div>
                        {% endif %}
                        <form action="#">
                            <div class="mb-3">
                                <label for="emailaddress" class="form-label">Email адрес</label>
                                <input class="form-control" type="email" name="email" id="emailaddress" required="" placeholder="Введите ваш email">
                            </div>

                            <div class="mb-3">
                                <label for="password" class="form-label">Пароль</label>
                                <input class="form-control" name="password" type="password" required="" id="password" placeholder="Введите ваш пароль">
                            </div>

                            <div class="mb-3">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="checkbox-signin" checked="">
                                    <label class="form-check-label" for="checkbox-signin">Запомнить меня</label>
                                </div>
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <div class="mb-3 d-grid text-center">
                                <button class="btn btn-primary" type="submit"> Войти </button>
                            </div>
                        </form>

                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12 text-center">
                        <p> <a href="{{ path('reset_password') }}" class="text-muted ms-1"><i class="fa fa-lock me-1"></i>Восстановить пароль</a></p>
                        <p class="text-muted">Нет учетной записи? <a href="{{ path('app_register') }}" class="text-dark ms-1"><b>Зарегистрироваться</b></a></p>
                    </div>
                </div>
            </div>
            </div>

        </form>

{% endblock %}
