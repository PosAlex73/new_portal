{% extends 'layout/base.html.twig' %}

{% block page_title %} Результаты поиска {% endblock %}

{% block content %}
        <div class="card">
            <div class="card-body">
                <h4 class="header-title mb-4">Результаты поиска</h4>
                <ul class="nav nav-pills navtab-bg nav-justified">
                    <li class="nav-item">
                        <a href="#courses" data-bs-toggle="tab" aria-expanded="false" class="nav-link active">
                            Курсы
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#articles" data-bs-toggle="tab" aria-expanded="true" class="nav-link">
                            Статьи
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#app_news" data-bs-toggle="tab" aria-expanded="false" class="nav-link">
                            Новости
                        </a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="courses">
                        {% if courses|length != 0 %}
                            {% include 'front/search/search_tab.html.twig' with {'result': courses, 'route': 'course_details'} %}
                        {% else %}
                            <p>По вашему запросу курсы не найдены.</p>
                        {% endif %}
                    </div>
                    <div class="tab-pane show" id="articles">
                        {% if articles|length != 0 %}
                            {% include 'front/search/search_tab.html.twig' with {'result': articles, 'route': 'blog_details'} %}
                        {% else %}
                            <p>По вашему запросу статьи не найдены</p>
                        {% endif %}
                    </div>
                    <div class="tab-pane" id="app_news">
                        {% if news|length != 0 %}
                            {% include 'front/search/search_tab.html.twig' with {'result': news, 'route': 'news_details'} %}
                        {% else %}
                            <p>По вашему запросу новости не найдены.</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
{% endblock %}
