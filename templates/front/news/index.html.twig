{% extends 'layout/base.html.twig' %}

{% block page_title %} Новости {% endblock %}

{% block content %}
    {% if news|length > 0 %}
        <div class="row">
            {% for new in news %}
                <div class="card">
                    <div class="card-body">
                        <p class="card-title">{{ new.title }}</p>
                        <p>{{ new.getShortText() }}</p>
                        <a href="{{ path('news_details', {id: new.id}) }}" class="btn btn-primary">Посмотреть новость</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="row">
            <div class="card">
                <div class="card-body">
                    <p class="card-text">Никаких статей пока не опубликовано</p>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
