{% extends 'layout/base.html.twig' %}

{% block page_title %} {{ new.title }} {% endblock %}

{% block content %}
    <div class="container g-my-75">
        <article class="g-mb-0">
            <header class="g-mb-30">
                <h2 class="h1 g-mb-15 g-mt-minus-10">{{ new.title }}</h2>
                <ul class="list-inline d-sm-flex g-color-gray-dark-v4 mb-0">
                    <li class="list-inline-item">
                        {{ new.created|format_datetime(locale="ru") }}
                    </li>
                    <li class="list-inline-item ml-auto">
                        <i class="icon-eye u-line-icon-pro align-middle mr-1"></i> Просмотры: {{ new.views }}
                    </li>
                </ul>
            </header>
            <div class="g-font-size-16 g-line-height-1_8 g-mb-30">
                {{ new.text|raw }}
            </div>
        </article>
    </div>
{% endblock %}
