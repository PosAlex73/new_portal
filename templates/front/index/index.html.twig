{% extends 'layout/base.html.twig' %}

{% block page_title %}Популярные курсы{% endblock %}

{% block content %}
    {% if courses is defined and courses|length > 0 %}
        <div class="row">
            {% for course in courses %}
                <div class="col-md-6 col-xl-3">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">{{ course.title  }}</h4>
                            <p class="card-text">{{ course.shortDescription|raw }}</p>
                            <a href="{{ path('course_details', {id: course.id}) }}" class="btn btn-primary">Посмотреть курс</a>
                        </div>
                    </div>

                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="card">
            <div class="card-body">
                <p class="card-text">В данный момент курсов не опубликовано</p>
            </div>
        </div>
    {% endif %}
{% endblock %}
